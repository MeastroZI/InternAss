<!DOCTYPE html>
<html>
<head>
  <title>User Table</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
    }
    h1 {
      text-align: center;
      color: #333;
    }
    table {
      width: 80%;
      margin: 0 auto;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    th, td {
      border: 1px solid #ddd;
      padding: 12px 15px;
      text-align: left;
    }
    th {
      background-color: #8c36ef;
      color: white;
    }
    tr:nth-child(even) {
      background-color: #f2f2f2;
    }
    tr:hover {
      background-color: #ddd;
    }
  </style>
</head>
<body>
  <h1>User Table</h1>
  <table>
    <thead>
      <tr>
        <th>_id</th>
        <th>Id</th>
        <th>Email</th>
        <th>Name</th>
        <th>Age</th>
        <th>City</th>
        <th>Zip_Code</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user._id %></td>
          <td><%= user.Id %></td>
          <td><%= user.Email %></td>
          <td><%= user.Name %></td>
          <td><%= user.Age %></td>
          <td><%= user.City %></td>
          <td><%= user.Zip_Code %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
